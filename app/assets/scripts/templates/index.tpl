<div class="vis--row vis--header">
  <h5 class="vis--row_title vis--header_item"><%= type %></h5>
  <span class="vis--header_item vis--header_score">Total Score %</span>
  <div class="vis--row_bars">
    <div class="vis--row_bar bar--count_0 vis--header_item">
      <a title="Sort by total score" class="sort sort-desc" data-category="total">Total<span class="collecticon"></span>
      </a>
    </div>
    <div class="vis--row_bar bar--count_1 vis--header_item">
      <a title="Sort by commitment score" class="sort sort-none" data-category="commitment">Commitment<span class="collecticon"></span>
      </a>
    </div>
    <div class="vis--row_bar bar--count_2 vis--header_item">
      <a title="Sort by freedom of expression score" class="sort sort-none" data-category="freedom">Freedom of Expression<span class="collecticon"></span>
      </a>
    </div>
    <div class="vis--row_bar bar--count_3 vis--header_item">
      <a title="Sort by privacy score" class="sort sort-none" data-category="privacy">Privacy<span class="collecticon"></span>
      </a>
    </div>
  </div>
</div>
<div class="js--bars"></div>
